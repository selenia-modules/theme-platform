#!/usr/bin/env bash

function install ()
{
  echo -e "\nInstalling build tools..."
  sudo gem install sass || exit $?
}

which sass > /dev/null || install

if [ "$1" == "--watch" ]; then
  echo
  sass --watch resources/assets/scss:public/dist --style compressed -E "UTF-8" && echo -e "\nDone.\n"
else
echo -e "Note: when developing, you can compile automatically using the --watch flag.\n\nBuilding..."
sass resources/assets/scss/components/sideBarMenu.scss public/dist/components/sideBarMenu.css --style compressed -E "UTF-8" && echo -e "Done.\n"
fi
